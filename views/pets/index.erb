<h1> Pets </h1>

<% for pet in @pets %>
    
    <ul>
        <li>
            <a href="/pets/<%= pet.id %>"><%= pet.name %></a> | 
            <%= pet.type %> | 
            <% if pet.is_assigned?() %>
                <%= pet.status %>
            <% else %>
                <a href="/pets/<%= pet.id %>/edit"><em><%= pet.status %></em></a>
            <% end %>
        </li>
    </ul>
    
<% end %>

<a href="/pets/new"><button type="button">Add new</button></a>
