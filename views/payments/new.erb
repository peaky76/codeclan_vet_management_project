<h1>Take payment from customer</h1>

<form id="form-payment-new" class="form-new" method="POST" action="/payments">

    <div class="form-field">
        <label for="select-owner">Payee</label>
        <select id="select-owner" name="owner_id">
            <% for owner in Owner.all() %>
                <option value="<%= owner.id %>">
                    <%= owner.full_name %> (Balance due: <%= owner.balance_due.to_currency %>)
                </option>          
            <% end %>
        </select>
    </div>

    <div class="form-field">
        <label for="amount">Amount</label>
        <input id="amount" type="text" name="amount" />
    </div> 

    <div class="form-field">
        <label for="date">Date</label>
        <input id="date" type="date" name="date" />
    </div>    
    
    <section class="button-row">
        <input class="submit" type="submit" value="Save">
        <button type="button"><a href="/payments">CANCEL</a></button>
    </section>


</form>