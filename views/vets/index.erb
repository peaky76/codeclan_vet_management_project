<h1> Vets </h1>

<% for vet in @vets %>
    <h2><%= vet.full_name %></h2>
    <ul>
        <% for pet in vet.pets %>
            <li><%= pet.name %> | <%= pet.type %></li>
        <% end %>
        <% if vet.pets.count == 0 %>
            <em>No pets assigned</em>
        <% end %>        
    </ul>    
<% end %>

<a href="/vets/new"><button type="button">Add new</button></a>