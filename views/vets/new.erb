<h1>Add vet</h1>

<form id="form-vet-new" class="form-new" method="POST" action="/vets">

    <div class="form-field">
    <label for="first-name">First Name</label>
    <input id="first-name" type="text" name="first_name" />
    </div>

    <div class="form-field">
    <label for="last-name">Last Name</label>
    <input id="last-name" type="text" name="last_name" />
    </div>

    <div class="form-field">
    <label for="tel">Telephone Number</label>
    <input id="tel" type="text" name="tel" />
    </div>

    <div class="form-field">
    <label for="day-off">Day Off</label>
    <input id="day-off" type="text" name="day_off" />
    </div>

    <section class="button-row">
        <input class="submit" type="submit" value="Save">
        <button type="button"><a href="/vets">CANCEL</a></button>
    </section>

</form>