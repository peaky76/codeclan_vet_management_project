<h1> Pets </h1>

<table id="table-pets-index">
<thead>
    <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Owner</th>
        <th>Vet</th>
    </tr>
</thead>
<% for pet in @pets.sort_by! { |pet| pet.name } %>

        <tr>
            <td>
                <a href="/pets/<%= pet.id %>"><%= pet.name %></a>
            </td> 
            <td>
                <%= pet.type %>
            </td>
            <td>
                <a href="/owners/<%= pet.owner_id %>"><%= pet.owner.full_name %></a>
            </td>  
            <td>
                <% if pet.is_assigned?() %>
                    <a href="/vets/<%= pet.vet_id %>"><%= pet.vet.full_name %></a>
                <% else %>
                    <a href="/pets/<%= pet.id %>/edit"><em>Not assigned</em></a>
                <% end %>
            </td>
        </tr>
    
<% end %>
</table>
