<h1><%= @pet.name %><sup class="id-sup"> (ID: <%= @pet.id %>)</sup></h1>
<em><%= @pet.type.upcase %><br/></em>
<em><%= @pet.status %></em>

<h2>Notes</h2>
<p>
<%= @pet.notes %><br/>
</p>

<form class="btn-route" action="/pets/<%= @pet.id %>/edit" method="GET"><input type="submit" value="Edit"></form>
