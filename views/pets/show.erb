<h1><%= @pet.name %><sup class="id-sup"> (ID: <%= @pet.id %>)</sup></h1>
<em><%= @pet.type.upcase %><br/></em>
<em><%= @pet.status %></em>

<h2>Treatments</h2>

<ul>
<% for treatment in @pet.treatments %>
    <li><%= treatment.name %></li>
<% end %>
<% if @pet.treatments.count == 0 %>
    <em>No treatments given yet.
<% end %>
</ul>

<h2>Notes</h2>
<p>
<%= @pet.notes %><br/>
</p>

<form class="btn-route" action="/pets/<%= @pet.id %>/edit" method="GET"><input type="submit" value="Edit"></form>
<form class="btn-route" action="/pets/<%= @pet.id %>/delete" method="POST"><input type="submit" value="Delete"></form>