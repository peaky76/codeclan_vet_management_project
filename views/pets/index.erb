<h1> Pets </h1>

<ul>
<% for pet in @pets %>
    
        <li>
            <a href="/pets/<%= pet.id %>"><%= pet.name %></a> | 
            <%= pet.type %> | 
            <% if pet.is_assigned?() %>
                Assigned to <%= pet.vet.full_name %>
            <% else %>
                <a href="/pets/<%= pet.id %>/edit"><em>Not assigned</em></a>
            <% end %>
        </li>
    
<% end %>
</ul>
